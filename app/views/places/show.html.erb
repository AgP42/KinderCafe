<div class="container pb-3">

   <div class="row justify-content-center mt-3">
      <div class="col-12 col-lg-6">
        <div class="back-btn">
        <%= link_to "Back to the list", places_path(addr: @search_address), class: "btn-third" %>
        </div>
        <div class="midwife-description">
          <h1><%=  @place.name %> </h1>
          <h2><%= @place.address %></h2>
        </div>
      </div>

      <div class="col-12 col-lg-6">
        <div class="midwife-button">
          <% if @place.user == current_user %>
          <%= link_to "Edit this place", @place, class: "btn-first btn-add mb-4" %>
          <% end %>
        </div>
      </div>

    </div>
  <div class="row justify-content-center mt-3 mb-5">
    <div class="col-12 col-lg-6">

      <div>
        <div class="midwife-img-box">
          <% if @place.image1? %>
          <%= cl_image_tag @place.image1, width: 800, height: 800, class: "midwife-img" %>
          <% else %>
          <%= image_tag "empty_cafe.png", class: "midwife-img" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="midwife-description">
        <div>
          <h2>Services</h2>
            <h4>Specialties</h4>
              <% @place.services.each do |service| %>
                <div class="specialty-tag"><%= service.name %></div>
              <% end %>
          </div>
       </div>
    </div>
  </div>

  <div class="row justify-content-center mb-5">
    <div class="col-12 col-lg-6" >
<div class="midwife-description">
        <div class="d-flex flex-column">
          <h2>About</h2>
          <p>Comments</p>
          <h3><%= @place.comment %></h3>
        </div>
      </div>

    </div>
    <div class="col-12 col-lg-6" >

      <div
        id="show_map"
        style="width: 100%;
        height: 350px;"
        data-markers="<%= @addr_marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>


    </div>
  </div>
</div>
